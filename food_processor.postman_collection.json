    {
      "name": "Webhook — LemonSqueezy (simulated)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Generate HMAC-SHA256 signature for the webhook payload.",
              "// Set LEMONSQUEEZY_WEBHOOK_SECRET in your Postman environment to match your .env value.",
              "const secret = pm.environment.get('LEMONSQUEEZY_WEBHOOK_SECRET') || 'your_webhook_secret_here';",
              "const body = pm.request.body.raw;",
              "const signature = CryptoJS.HmacSHA256(body, secret).toString(CryptoJS.enc.Hex);",
              "pm.request.headers.add({ key: 'X-Signature', value: signature });"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Returns 200', () => pm.response.to.have.status(200));",
              "pm.test('Received', () => pm.expect(pm.response.json().received).to.eql(true));"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{base_url}}/api/webhooks/lemonsqueezy",
          "host": ["{{base_url}}"],
          "path": ["api", "webhooks", "lemonsqueezy"]
